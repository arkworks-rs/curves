def print_scalar(x, name='x', field='Fr'):
    print("const {}: Self::ScalarField =".format(name))
    print("\tfield_new!({}, \"{}\");".format(field, x))

def glv_param_j0(p, r):
    '''
    return:
    * the coefficients of the endomorphism φ
    * λ the eigen value of the endomorphism φ
    * N the 2x2 matrix for the scalar decomposition
    '''
    Cx.<x> = GF(p)[]
    β = (x**3-1).roots()[0][0]
    CX.<X> = GF(r)[]
    λ = (X**3-1).roots()[0][0]
    M = Matrix([[-ZZ(λ), 1], [r, 0]])
    N = M.LLL()
    return [β,λ] + N.list()

